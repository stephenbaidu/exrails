<div class="report-title">Report [<%= @data.title %>]</div>
<table width="100%" class="table table-condensed">
  <thead>
    <tr>
      <th width="5%">#</th>
      <th width="45%">Name</th>
      <th width="35%">Description</th>
      <th width="15%" class="right">Status</th>
    </tr>
  </thead>
<% @data.samples.each_with_index do |sample, i| %>
  <tr>
    <td><%= i + 1 %></td>
    <td><%= sample.name %></td>
    <td><%= sample.description %></td>
    <td class="right"><%= sample.sample_status.name %></td>
  </tr>
<% end %>
</table>